

<div class="container" style="margin-top: 30px">



  <div class="col-md-6 col-md-offset-3" style="margin-bottom: 200px">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header center">Olvidaste tu Password</h1>
      <div class="wrapper-form">
        <section class="wrapper-facebook">
          <div id="user-widget">
            <div class="row">
                <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                  <%= devise_error_messages! %>

                  <div><%= f.label :email %><br />
                  <%= f.email_field :email, :autofocus => true, class: "input-sm" %></div>

                  <div class="col-md-8 col-md-offset-2"><%= f.submit "Eviame un mail con las instrucciones", class: "btn btn-primary" %></div>
                <% end %>
            </div>

            <div class="row">
            <%= render "devise/shared/links" %>
            </div>
          </div>

        </section>





      </div>
    </div>
  </div>
</div>




