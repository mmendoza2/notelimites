                <p></p>
                <i class="icon-facebook-sign"></i>  <%= link_to t("header.sign_up_fb"), user_facebook_omniauth_authorize_path, class: " btn btn-lg btn-primary" %>
              </div><!-- /header-description -->
            </div>
          </section>

      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>


